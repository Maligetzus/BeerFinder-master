@model BeerFinder.Models.BarModels.AddViewModel
@{
    ViewData["Title"] = "Add";
}

<form asp-controller="Bar" asp-action="Add" method="post">

    <label asp-for="Name"></label>
    <input asp-for="Name" />
    <span asp-validation-for="Name"></span><br />
    <label asp-for="BarTagString"></label>
    <input asp-for="BarTagString" />
    <span asp-validation-for="BarTagString"></span><br />
    <label asp-for="OpeningTime"></label>
    <input asp-for="OpeningTime" />
    <span asp-validation-for="OpeningTime"></span><br />
    <label asp-for="ClosingTime"></label>
    <input asp-for="ClosingTime" />
    <span asp-validation-for="ClosingTime"></span><br />
    <label asp-for="Picture"></label>
    <input asp-for="Picture" />
    <span asp-validation-for="Picture"></span><br />

    <button type="submit">Add!</button>

</form>